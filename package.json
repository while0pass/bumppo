{
  "name": "Bumppo",
  "version": "0.6.1",
  "description": "Search UI for the Multichannel Discourse Project",
  "main": "build/js/spa.js",
  "license": "CC0-1.0",
  "private": false,
  "scripts": {
    "build": "rollup -c",
    "lint": "eslint",
    "lint-all": "find src/ -name '*.js' | xargs eslint",
    "lint-watch": "find src/ -name '*.js' | entr -s 'clear; yarn run lint-all'",
    "live-rebuild": "rollup -c --watch",
    "showreel": "test -n \"$BUMPPO_VERSION\" && { gulp -f semantic/gulpfile.js build; BUMPPO_ENV=production BUMPPO_HOSTING=1 rollup -c; git --work-tree=../bumppo-ghpages --git-dir=../bumppo-ghpages/.git checkout gh-pages; rsync -av --exclude='*.mp4' build/ ../bumppo-ghpages/$BUMPPO_VERSION; } || echo $'\\n\\nЗадайте переменную окружения BUMPPO_VERSION\\n'",
    "production": "gulp -f semantic/gulpfile.js build; BUMPPO_ENV=production rollup -c",
    "serve": "lite-server -c lite-server.config.json",
    "test": "echo 'Error: no test specified' && exit 1",
    "watch": "npm-run-all --parallel live-rebuild serve"
  },
  "dependencies": {
    "debug": "^4.0.1",
    "jquery": "^3.3.1",
    "jquery.initialize": "^1.3.0",
    "knockout": "^3.4.2",
    "page": "^1.10.2",
    "semantic-ui": "^2.4.2",
    "svg.js": "^2.6.6",
    "video.js": "^7.2.3",
    "videojs-markers": "^1.0.1",
    "videojs-youtube": "^2.6.0"
  },
  "devDependencies": {
    "@babel/core": "^7.1.2",
    "@babel/preset-env": "^7.1.0",
    "cssnano": "^4.1.4",
    "lite-server": "^2.4.0",
    "postcss-cssnext": "^3.1.0",
    "postcss-inline": "^1.2.0",
    "postcss-nested": "^4.1.0",
    "postcss-simple-vars": "^5.0.1",
    "rollup": "^0.67",
    "rollup-plugin-babel": "^4.0.3",
    "rollup-plugin-commonjs": "^9.1.8",
    "rollup-plugin-copy": "^0.2.3",
    "rollup-plugin-eslint": "^5.0.0",
    "rollup-plugin-node-resolve": "^3.4.0",
    "rollup-plugin-postcss": "^1.6.2",
    "rollup-plugin-replace": "^2.0.0",
    "rollup-plugin-terser": "^3.0.0",
    "yarn-run-all": "^3.1.1"
  }
}
